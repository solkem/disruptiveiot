    const section = document.querySelector('.dio-featured');
    
    try {
      const response = await fetch(
        `${API_URL}?key=${API_KEY}&limit=1&filter=featured:true&include=tags&fields=title,url,excerpt,published_at,slug`
      );
      const data = await response.json();
      
      if (data.posts && data.posts.length > 0) {
        const post = data.posts[0];
        const tag = post.tags?.[0];
        const tagName = tag ? tag.name : 'Featured';
        const date = new Date(post.published_at).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' });
        
        container.innerHTML = `
          <span class="tag">${tagName}</span>
          <h3><a href="${post.url}">${post.title}</a></h3>
          <p class="excerpt">${post.excerpt || ''}</p>
          <span class="meta">${date}</span>
          <a href="${post.url}" class="read-more">Read Article ‚Üí</a>
        `;
        
        window.featuredPostSlug = post.slug;
      } else {
        section.classList.add('hidden');
      }
    } catch (error) {
      console.error('Failed to load featured post:', error);
      section.classList.add('hidden');
    }
  }
  
  async function loadLatestPosts() {
    const container = document.getElementById('latest-posts');
    
    try {
      await new Promise(resolve => setTimeout(resolve, 100));
      
      const response = await fetch(
        `${API_URL}?key=${API_KEY}&limit=4&include=tags&fields=title,url,excerpt,published_at,slug`
      );
      const data = await response.json();
      
      if (data.posts && data.posts.length > 0) {
        let posts = data.posts;
        if (window.featuredPostSlug) {
          posts = posts.filter(p => p.slug !== window.featuredPostSlug);
        }
        posts = posts.slice(0, 3);
        
        container.innerHTML = posts.map(post => {
          const tag = post.tags?.[0];
          const tagClass = tag ? tag.slug : 'general';
          const tagName = tag ? tag.name : 'Article';
          const date = new Date(post.published_at).toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
          
          return `
            <div class="dio-article-card">
              <div class="card-content">
                <span class="tag ${tagClass}">${tagName}</span>
                <h3><a href="${post.url}">${post.title}</a></h3>
                <p class="excerpt">${post.excerpt || ''}</p>
                <span class="meta">${date}</span>
              </div>
            </div>
          `;
        }).join('');
      } else {
        container.innerHTML = '<p class="dio-no-posts">No posts yet. Check back soon!</p>';
      }
    } catch (error) {
      console.error('Failed to load posts:', error);
      container.innerHTML = '<p class="dio-no-posts">Unable to load posts.</p>';
    }
  }
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      loadFeaturedPost();
      loadLatestPosts();
    });
  } else {
    loadFeaturedPost();
    loadLatestPosts();
  }
})();
</script>

